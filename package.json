{
  "name": "patreon-extension",
  "version": "1.0.1",
  "description": "Patreon Chrome extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/shubhamSainiCloudAnalogy/patreon-extension.git"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit && vite build --mode production",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "test": "vitest",
    "commitlint": "commitlint --edit",
    "lint": "eslint src --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier . --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@popperjs/core": "^2.11.8",
    "axios": "^1.7.7",
    "classnames": "^2.5.1",
    "construct-style-sheets-polyfill": "3.1.0",
    "dayjs": "^1.11.13",
    "file-saver": "^2.0.5",
    "form-data": "^4.0.1",
    "lucide-react": "^0.372.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-loading-overlay-ts": "^2.0.2",
    "react-modal": "^3.16.1",
    "react-popper": "^2.3.0",
    "react-responsive-modal": "^6.4.2",
    "react-select": "^5.8.0",
    "react-tooltip": "^5.26.4",
    "sonner": "^1.5.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "0.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.4",
    "@commitlint/config-conventional": "18.1.0",
    "@rollup/plugin-sucrase": "^5.0.2",
    "@rollup/plugin-typescript": "11.1.6",
    "@testing-library/react": "14.0.0",
    "@types/chrome": "0.0.263",
    "@types/node": "20.8.10",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.18",
    "@types/react-modal": "^3.16.3",
    "@types/ws": "8.5.8",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.18.1",
    "@vitejs/plugin-react": "4.2.0",
    "chokidar": "3.5.3",
    "cross-env": "7.0.3",
    "eslint": "8.56.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "fs-extra": "11.1.1",
    "husky": "8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "15.2.0",
    "magic-string": "^0.30.10",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "rollup": "4.3.0",
    "sass": "1.72.0",
    "ts-loader": "9.5.0",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "vite": "5.0.12",
    "vite-plugin-babel": "^1.2.0",
    "vitest": "^1.6.0",
    "ws": "8.14.2"
  },
  "packageManager": "pnpm@9.0.0"
}
